<?xml version="1.0" encoding="KOI8-R"?>

<options>

	<!-- <Что выводить> -->
	<dump>

		<!-- <Исполняемые инструкции> -->
		<inst>       0 </inst>

		<!-- <> -->
		<inststop>   0 </inststop>

		<!-- <Содержимое fpu на каждом такте> -->
		<fpu>        0 </fpu>

		<!-- <Выводить fpu в плавающем виде (по умолчанию hex)> -->
		<fpu_float>  0 </fpu_float>

		<!-- <Содержимое GPR на каждом такте> -->
		<gpr>        0 </gpr>

		<!-- <Содержимое адресных регистров на каждом такте> -->
		<addrreg>    0 </addrreg>

		<!-- <Содержимое pstack после инструкций call, calli, ret> -->
		<pstack>     0 </pstack>

		<!-- <Вывод событий (чтения/записи в регистры/память> -->
		<event>

			<!-- <Включить вывод событий> -->
			<enable>  0 </enable>

			<!-- <Вывод данных в плавающем виде (по умолчанию hex)> -->
			<float>   1 </float>

			<!-- <Включить вывод событий для данной секции> -->
			<sect0>  1 </sect0>
			<sect1>  0 </sect1>
			<sect2>  0 </sect2>
			<sect3>  0 </sect3>

			<!-- <События от iram. Обычно отключается, чтобы не показывать события чтения инструкций.> -->
			<iram>    0 </iram>

			<!-- <События от k64. В основном, запись/чтение интерфейсных регистров.> -->
			<k64>     1 </k64>

			<fcsr>    1 </fcsr>
			<ctrlreg> 1 </ctrlreg>
		</event>

		<!-- <Вывод дополнительной информации при останове эмулятора.> -->
		<stop>

			<!-- <Вывод всех регистров> -->
			<regs>   0 </regs>

			<!-- <Вывод содержимого локальной памяти секций> -->
			<lmem>
				<sect0> 0 </sect0>
				<sect1> 0 </sect1>
				<sect2> 0 </sect2>
				<sect3> 0 </sect3>
			</lmem>
		</stop>

	</dump>



	<!-- <Управление выводом эмулятора> -->
	<output>

		<!-- <Направлять вывод в файл или в stdout> -->
		<tofile> 1 </tofile>

		<!-- <Имя файла, если направлять вывод в файл> -->
		<filename>k128cp2.log</filename>

	</output>


	<!-- <Сохранение состояния CP2 в файл> -->
	<savestate>

		<enable>  0 </enable>

		<!-- <Сохранение после инструкции 'run'>  -->
		<onrun>  1 </onrun>

		<!-- Сохранение после инструкции 'stop'  -->
		<onstop> 0 </onstop>

		<!-- Выводить сообщение при сохранении  -->
		<message> 1 </message>

		<!-- Префикс имени файла состояния  -->
		<fileprefix>cp2state_</fileprefix>

	</savestate>

</options>

